<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountriesExplorer.MainPage"
             Title="Countries Explorer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Text="Buscar Países"
                Command="{Binding GetCountriesCommand}"
                Margin="20"
                HorizontalOptions="Center"/>

        <CollectionView Grid.Row="1"
                       ItemsSource="{Binding Countries}"
                       Margin="20">
            <CollectionView.ItemTemplate >
                <DataTemplate >
                    <Frame Margin="0,5" Padding="15" BorderColor="Gray"   >
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                 Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectCountryCommand}"
                                 CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Image
                                 MaximumWidthRequest="150"
                                MaximumHeightRequest="150"
                                 Aspect="AspectFit"
                                Source="{Binding Flags.Png}"
                                />
                            <Label Text="{Binding Name.Common}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Capital[0]}" 
                                   FontSize="14" 
                                   TextColor="Gray"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
